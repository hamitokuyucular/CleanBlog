<%- include('partials/_header') -%>

  <body>

    <!-- Navigation -->

    <%- include('partials/_navigation') -%>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="post-heading">
                <h1><%= post.title %></h1>
                <span class="meta">Posted by
                  <a href="#"><%=post.authorName %></a>
                  on <%= post.dateCreated %></span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Post Content -->
      <article>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">

                <p><%= post.content %></p>

              </p>
            </div>
          </div>
        </div>

        <div class="post-edit">
          <a href="/posts/edit_post/<%= post._id %>" class="btn btn-primary">Update</a>
          <a href="/posts/<%= post._id %>?_method=Delete" onclick="return confirm('ARE YOU SURE?')" class="btn btn-danger">Delete</a>
        </div>

      </article>

      <hr>

      <!-- Footer -->

      <%- include('partials/_footer') -%>

        <!-- Custom scripts for this template -->
        <script src="/js/clean-blog.min.js"></script>

  </body>

  </html>